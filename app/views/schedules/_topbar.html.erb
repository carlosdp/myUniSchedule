<div id="topbar">
	
	<% if !@user %>
	<div id="login"><%= link_to image_tag('myulogo.png'), root_path %></div><div id="login-l">Login via <%= link_to image_tag('fbbutton.gif'), @oauth.url_for_oauth_code(:permissions => 'user_education_history') %></div>
	<% else %>
	<div id="login"><%= link_to image_tag('myulogo.png'), root_path %></div>
	<div id="user">School: <%= current_user.school.name %> | <%= @user["name"] %>
	<%= image_tag @graph.get_picture('me',{:type => 'small'}) %><%= link_to 'Logout', {:controller => 'o_auth', :action => 'logout'}, :id => 'logout' %></div>
	<% end %>
	
</div>